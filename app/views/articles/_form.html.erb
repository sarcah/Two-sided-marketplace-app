<%= simple_form_for(@article) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

<%# Form for user to enter article details %>
<%# allows user to see price, but only gives them one option to select %>
<%# Category is a drop down menu %>
<%# Thumbnail images can be in image format, the article must be in pdf for download after purchase %>
  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :author %>
    <%= f.input :description %>
    <%= f.input :price, collection: 1..1, prompt: "Price for articles is set", selected: 1 %>
    <%= f.input :publication_date %>
    <%= f.input :category_id, collection: Category.pluck(:name, :id) %>
    <%= f.label :thumbnail %>
    <%= f.file_field :thumbnail, accept: 'image/png, image/jpg, image/jpeg, image/webp' %>
    <%= f.label :image %>
    <%= f.file_field :image, accept: 'image/pdf' %>
    

  </div>

  <div class="form-actions">
  <%= f.submit %>
  </div>
<% end %>


