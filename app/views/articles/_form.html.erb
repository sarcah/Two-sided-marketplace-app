
<%= simple_form_for(@article) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :author %>
    <%= f.input :description %>
    <%= f.input :price %>
    <%= f.input :publication_date %>
    <%= f.input :category, collection: ["Arts", "Business", "Culture", "Food & Drink", "Health", "News", "Opinion", "Politics", "Science", "Sports", "Technology"] %>
    <%= f.input :article_rating %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
