<%= simple_form_for(@article) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :author %>
    <%= f.input :description %>
    <%= f.input :price, collection: 1..1, prompt: "Price for articles is set", selected: 1 %>
    <%= f.input :publication_date %>
    <%= f.input :start_date, as: :date, html5: true %>
    <%= f.input :category, collection: ["Arts", "Business", "Culture", "Food & Drink", "Health", "News", "Opinion", "Politics", "Science", "Sports", "Technology"] %>
    <%= f.file_field :image %>
    <%= f.file_field :thumbnail %>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>


